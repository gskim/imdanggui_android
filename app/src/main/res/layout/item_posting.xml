<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_item"
    android:weightSum="100"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="80"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:weightSum="100"
    >
    <TextView
        android:id="@+id/info_text"
        android:paddingLeft="15dp"
        android:layout_marginTop="12dp"
        android:paddingRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:minHeight="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="8"
        android:lineSpacingExtra="1dp"
        />


</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            android:textColor="#999999"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[aaaaa]"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_toRightOf="@id/user"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_toRightOf="@id/random"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/regdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24시간전"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_toRightOf="@id/term"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/term2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_toRightOf="@id/regdate"

            />
        <TextView
            android:id="@+id/category"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="관심임당귀"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/term2"
            android:singleLine="true"
            android:ellipsize="end"
            />

    </RelativeLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="50dp"
        android:layout_weight="20">

        <TextView
            android:id="@+id/reply"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:text="99+"
            android:textColor="@color/white"
            android:background="@drawable/item_posting_replycount_sec"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

    </RelativeLayout>
    </LinearLayout>