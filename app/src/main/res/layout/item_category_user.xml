<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="12dp"
    >
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="@dimen/categoryItem"
            android:layout_height="@dimen/categoryItem"
            android:layout_gravity="center">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="0.4dp"
                fresco:roundingBorderColor="@color/unselect_tab_icon"
                android:id="@+id/imageView1"
                />
            <ImageView
                android:id="@+id/new_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_new_small"
                />
         </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="TextView"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>